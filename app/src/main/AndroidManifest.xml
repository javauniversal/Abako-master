<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.dito.abako.abako">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.Splash"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ActLoginNegocio"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.ActLoginUsuario"
            android:label="@string/title_activity_act_logon_usuario"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.ActMenu"
            android:label="@string/title_activity_act_menu"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.Accounts"
            android:label="@string/app_name"
            android:theme="@style/NoHeaderLight" />
        <activity
            android:name=".Activities.Settings"
            android:label="@string/title_activity_act_menu" />
        <activity
            android:name=".Activities.ActCarteraMenu"
            android:label="@string/title_activity_act_cartera_menu"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>